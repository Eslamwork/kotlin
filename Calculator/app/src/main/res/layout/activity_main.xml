<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/calcResult"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textColor="@color/calc.RightButtons"
            android:textSize="64sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/buAC"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="reset"
                android:text="A/C" />

            <Button
                android:id="@+id/buPlusOrMinus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="changeSign"
                android:text="+/-" />

            <Button
                android:id="@+id/buprecentage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="reset"
                android:text="%" />

            <Button
                android:id="@+id/buDivide"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.RightButtons"
                android:onClick="startOperation"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="updateView"
                android:text="7" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="updateView"
                android:text="8" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="updateView"
                android:text="9" />

            <Button
                android:id="@+id/buMultiply"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.RightButtons"
                android:onClick="startOperation"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="updateView"
                android:text="4" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="updateView"
                android:text="5" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="updateView"
                android:text="6" />

            <Button
                android:id="@+id/buMinus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.RightButtons"
                android:onClick="startOperation"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="updateView"
                android:text="1" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="updateView"
                android:text="2" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.NormalButtons"
                android:onClick="updateView"
                android:text="3" />

            <Button
                android:id="@+id/buPlus"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/calc.RightButtons"
                android:onClick="startOperation"
                android:text="+" />
        </TableRow>
    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <Button
            android:id="@+id/bu0"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2"
            android:background="@color/calc.NormalButtons"
            android:onClick="updateView"
            android:text="0" />

        <Button
            android:id="@+id/bupoint"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/calc.NormalButtons"
            android:onClick="updateView"
            android:text="." />

        <Button
            android:id="@+id/buequal"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/calc.RightButtons"
            android:onClick="calculate"
            android:text="=" />
    </LinearLayout>


</LinearLayout>